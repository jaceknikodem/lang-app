{
  "name": "local-language-learning-app",
  "version": "1.0.0",
  "description": "A privacy-first desktop language learning application",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "node build-renderer.js",
    "build:renderer:watch": "node build-renderer.js --watch",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"npm run build:renderer:watch\"",
    "electron:dev": "wait-on dist/main/main/main.js && electron .",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run build && electron-builder --mac --win --linux",
    "pack": "npm run build && electron-builder --dir",
    "test": "jest",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:e2e:headless": "playwright test --headed=false",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "tsc --noEmit",
    "pre-commit": "npm run lint && npm run build && npm run test:unit",
    "test:quick": "npm run lint && npm run test:unit",
    "test:ci": "npm run build && npm run test:all",
    "prepare": "husky"
  },
  "keywords": [
    "language-learning",
    "electron",
    "offline",
    "privacy"
  ],
  "author": "Local Language Learning",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "esbuild": "^0.25.11",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "ts-jest": "^29.4.5",
    "typescript": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "lit": "^3.0.0",
    "node-record-lpcm16": "^1.0.1",
    "whisper-node": "^1.1.1",
    "zod": "^3.22.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "tsc --noEmit"
    ],
    "tests/**/*.{ts,js}": [
      "tsc --noEmit"
    ]
  },
  "build": {
    "appId": "com.locallanguage.app",
    "productName": "Local Language Learning",
    "copyright": "Copyright Â© 2024 Local Language Learning",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "audio/**/*",
      "data/**/*",
      "!src/**/*",
      "!tests/**/*",
      "!*.md",
      "!.git*"
    ],
    "extraResources": [
      {
        "from": "audio",
        "to": "audio",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": {
        "teamId": "${APPLE_TEAM_ID}"
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Local Language Learning",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education",
      "desktop": {
        "Name": "Local Language Learning",
        "Comment": "Privacy-first language learning application",
        "Keywords": "language;learning;education;vocabulary;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "title": "Local Language Learning ${version}",
      "backgroundColor": "#ffffff",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 190,
          "type": "file"
        }
      ]
    }
  }
}
