{
  "name": "local-language-learning-app",
  "version": "1.0.0",
  "description": "A privacy-first desktop language learning application",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev\"",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json && cp src/renderer/index.html dist/renderer/",
    "build:watch": "concurrently \"npm run build:main -- --watch\" \"npm run build:renderer -- --watch\"",
    "electron:dev": "wait-on dist/main/main.js && electron .",
    "electron": "electron .",
    "dist": "npm run build && electron-builder",
    "test": "jest",
    "test:e2e": "playwright test"
  },
  "keywords": [
    "language-learning",
    "electron",
    "offline",
    "privacy"
  ],
  "author": "Local Language Learning",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "lit": "^3.0.0",
    "zod": "^3.22.0"
  },
  "build": {
    "appId": "com.locallanguage.app",
    "productName": "Local Language Learning",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "audio/**/*",
      "data/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
